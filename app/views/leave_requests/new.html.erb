<div class="w-full px-4 py-8">
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="bg-gray-200 px-6 py-4">
      <h1 class="text-2xl font-bold text-black text-center">Leave Request Form</h1>
    </div>

    <div class="p-6 sm:p-8">
      <%= form_with model: @leave_request, local: true, class: "space-y-6" do |form| %>
        <!-- Leave Type -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="space-y-1">
            <%= form.label :leave_type, "Leave Type", class: "block text-sm font-medium text-gray-700" %>
            <div class="relative">
              <%= form.select :leave_type, options_for_select(["Casual", "Sick", "Annual", "Other"]), {}, class: "appearance-none block w-full pl-3 pr-10 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
              </div>
            </div>
          </div>

          <div class="space-y-1">
            <%= form.label :leave_duration, "Leave Duration", class: "block text-sm font-medium text-gray-700" %>
            <div class="relative">
              <%= form.select :leave_duration, 
                              options_for_select([["Full Day", "full_day"], ["Half Day", "half_day"]], form.object.leave_duration || "full_day"),
                              {},
                              class: "appearance-none block w-full pl-3 pr-10 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
              </div>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="space-y-1">
            <%= form.label :from, "Start Date", class: "block text-sm font-medium text-gray-700" %>
            <div class="relative rounded-md shadow-sm">
              <%= form.date_field :from, class: "block w-full pl-3 pr-10 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 sm:text-sm date", placeholder: "Select date", required: true %>
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
              </div>
            </div>
          </div>

          <div class="space-y-1">
            <%= form.label :to, "End Date", class: "block text-sm font-medium text-gray-700" %>
            <div class="relative rounded-md shadow-sm">
              <%= form.date_field :to, class: "block w-full pl-3 pr-10 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 sm:text-sm date", placeholder: "Select date", required: true %>
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-1">
          <%= form.label :reason, "Reason (Optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :reason, rows: 3, class: "block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder: "Briefly explain the reason for your leave" %>
        </div>

        <!-- Submit Button -->
        <div class="pt-4 flex justify-end">
          <%= form.submit "Submit Request", class: "w-25  py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>