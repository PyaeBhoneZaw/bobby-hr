<div>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8 gap-2">
    <!-- Leave Utilization  -->
    <div class="md:col-span-1 bg-white p-4 rounded-lg shadow border">
      <h3 class="text-lg font-semibold mb-4">Leave Utilization This Month</h3>
      <div class="chart-container">
        <canvas id="leaveTrendChart"></canvas>
      </div>
    </div>


    <div class="md:col-span-1">
      <!-- Department Distribution -->
      <%= render 'shared/chart',
      title: 'Department Distribution',
      id: 'departmentDistributionChart',
      type: 'pie',
      data: {
        labels: @department_with_company.keys,
        datasets: [{
          data: @department_with_company.values,
          backgroundColor: ['#3B82F6', '#da8dee', '#F59E0B', '#EF4444']
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'right', 
              align: 'center',   
              labels: {
                boxWidth: 12,    
                padding: 10     
              }
            },
          },
          cutout: '50%'
        }
      %>
    </div>

    

    <!-- Add this to your first grid section -->
    <div class="bg-white p-4 rounded-lg shadow border">
      <h3 class="text-lg font-semibold mb-4">Payroll Summary</h3>
      <div class="space-y-2">
        <div class="flex justify-between">
          <span class="text-gray-600">Current Period:</span>
          <span class="font-medium"><%= Date.today.strftime('%B %Y') %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Total Processed:</span>
          <span class="font-medium"><%= number_to_currency(@payroll_summary[:total_processed]) %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Employees Paid:</span>
          <span class="font-medium"><%= @payroll_summary[:employees_paid] %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Avg. Net Pay:</span>
          <span class="font-medium"><%= number_to_currency(@payroll_summary[:average_net]) %></span>
        </div>
      </div>
    </div>

    
  </div>

  <!-- 3. Secondary Charts Row -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8 gap-2">
    <!-- Late Arrivals by Department -->
    <%= render 'shared/chart',
      title: 'Late Arrivals by Department',
      id: 'lateByDepartmentChart',
      type: 'pie',
      data: {
        labels: @late_by_department.keys,
