      id: 'payrollTrendChart',
      type: 'line',
      data: {
        labels: @payroll_trends.keys,
        datasets: [
          {
            label: 'Gross Pay',
            data: @payroll_trends.values.map { |v| v[:gross_pay] },
            borderColor: '#3B82F6',
            backgroundColor: 'rgba(59, 130, 246, 0.1)',
            tension: 0.3
          },
          {
            label: 'Net Pay',
            data: @payroll_trends.values.map { |v| v[:net_pay] },
            borderColor: '#10B981',
            backgroundColor: 'rgba(16, 185, 129, 0.1)',
            tension: 0.3
          }
        ]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'right'
          },
        },
        
