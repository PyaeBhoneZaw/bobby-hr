<div class="chart-card bg-white p-5 rounded-lg shadow border">
    <h3 class="text-lg font-semibold text-gray-800 mb-4"><%= title %></h3>
    <div class="chart-container" style="height: 300px">
      <canvas 
        id="<%= id %>" 
        data-chart-type="<%= type %>"
        data-chart-data="<%= data.to_json %>"
        data-chart-options="<%= options.to_json %>"
      ></canvas>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const canvas = document.getElementById('<%= id %>');
      if (canvas) {
        new Chart(canvas, {
          type: canvas.dataset.chartType,
          data: JSON.parse(canvas.dataset.chartData),
          options: JSON.parse(canvas.dataset.chartOptions)
        });
      }
    });
  </script>